@model JobFindingSystem.Models.LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@section subNav {
    <ol class="breadcrumb justify-content-left">
        <li class="breadcrumb-item">
            <a href="~/Home/Index">Home</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-2">
            <div class="login px-4 mx-auto mw-100">
                <h5 class="text-center mb-4">Login Now</h5>
                <div id="wrapper1">
                    <form method="post">
                        <div class="form-group">
                            @Html.LabelFor(m => m.email, new { Class = "mb-2" })
                            @Html.TextBoxFor(m => m.email, new { maxlength = 50, required = "", autofocus = "", Class = "form-control", placeholder = "Enter your email" })
                            @Html.ValidationMessageFor(m => m.email, "", new { Class = "alert-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.password, new { Class = "mb-2" })
                            @Html.TextBoxFor(m => m.password, new { type = "password", maxlength = 20, required = "", Class = "form-control", placeholder = "Enter your password" })
                            @Html.ValidationMessageFor(m => m.password, "", new { Class = "alert-danger" })
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" name="rmbMe">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
                        <p class="text-center pb-4">
                            <a href="#" data-toggle="modal" data-target="#exampleModalCenter2"> Don't have an account?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>
