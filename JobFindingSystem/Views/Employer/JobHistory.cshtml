
@{
    ViewBag.Title = "Job History";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section header {
    <link href="~/TemplateSources/DataTables/datatables.min.css" rel="stylesheet" />
}
<script src="~/TemplateSources/DataTables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>
<div class="forms">
    <div class="row">
        <div class="col-md-12">
            <h2 class="title1">@ViewBag.Title</h2>
        </div>
    </div>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Job title</th>
                        <th>Posted on</th>
                        <th>Working date</th>
                        <th>Post expired date</th>
                        <th>Working duration</th>
                        <th>Total wage paid</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Post post in ViewBag.Posts)
                    {
                        RequestedList r = post.RequestedLists.SingleOrDefault(x => x.status == "success");
                    <tr>
                        <td>@post.jobTitle</td>
                        <td>@post.postedDate.Value.ToString("dd-MMMM-yyyy hh:mm tt")</td>
                        <td>@post.workingDate.Value.ToString("dd-MMMM-yyyy hh:mm tt")</td>
                        <td>@post.postExpired.Value.ToString("dd-MMMM-yyyy hh:mm tt")</td>
                        <td>@post.workingDuration.Value.ToString("0.00 hrs")</td>
                        <td>@post.workingTotalWage.Value.ToString("RM 0.00")</td>
                        <td>@post.status</td>
                        <td><a href="~/Employer/EmploymentDetail?postID=@post.postID" class="btn btn-primary">Detail</a></td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Job title</th>
                        <th>Posted on</th>
                        <th>Working date</th>
                        <th>Post expired date</th>
                        <th>Working duration</th>
                        <th>Total wage paid</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
