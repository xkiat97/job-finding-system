
@{
    ViewBag.Title = "Job History";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section header {
    <link href="~/TemplateSources/DataTables/datatables.min.css" rel="stylesheet" />
}
<script src="~/TemplateSources/DataTables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>
<div class="forms">
    <div class="row">
        <div class="col-md-12">
            <h2 class="title1">@ViewBag.Title</h2>
        </div>
    </div>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Rating date</th>
                        <th>Rate for job</th>
                        <th>Rate for employee</th>
                        <th>Rating</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Rating r in ViewBag.r)
                    {
                    <tr>
                        <td>@r.ratingDate</td>
                        <td>@r.Post.jobTitle</td>
                        <td>@r.User.userName</td>
                        <td>@r.nOfFive</td>
                        <td>@r.comment</td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Rating date</th>
                        <th>Rate for job</th>
                        <th>Rate for employee</th>
                        <th>Rating</th>
                        <th>Comment</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
