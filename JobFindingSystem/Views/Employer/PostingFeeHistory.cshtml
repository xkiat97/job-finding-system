
@{
    ViewBag.Title = "Posting Fee History";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section header {
    <link href="~/TemplateSources/DataTables/datatables.min.css" rel="stylesheet" />
}
<script src="~/TemplateSources/DataTables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>
<div class="forms">
    <div class="row">
        <div class="col-md-12">
            <h2 class="title1">@ViewBag.Title</h2>
        </div>
    </div>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Payment Date</th>
                        <th>Pay for job</th>
                        <th>Amount (MYR)</th>
                        <th>Duration (Days)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PostFee item in ViewBag.p)
                    {
                    <tr>
                        <td>@item.paymentDate</td>
                        <td>@item.Post.jobTitle</td>
                        <td>RM @item.fee</td>
                        <td>@item.durationDay</td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Payment Date</th>
                        <th>Pay for job</th>
                        <th>Amount (MYR)</th>
                        <th>Duration (Days)</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
