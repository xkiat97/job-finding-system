
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@section header {
    <link href="~/TemplateSources/DataTables/datatables.min.css" rel="stylesheet" />
}
<script src="~/TemplateSources/DataTables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>
<div class="forms">
    <div class="row">
        <div class="col-md-12">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <h2 class="aligncenter">@ViewBag.Title </h2>
                <h4 class="aligncenter">@ViewBag.subtitle</h4>
            </div>
            <div class="col-sm-3">
                <i class="pull-right"><strong>Generated on: </strong> @DateTime.Today.ToShortDateString()</i>
            </div>
        </div>
    </div>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <table id="dataTable" class="table table-hover table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Employer name</th>
                        <th>Saved posts</th>
                        <th>Posting posts</th>
                        <th>Bided posts</th>
                        <th>Closing posts</th>
                        <th>Working posts</th>
                        <th>Absent posts</th>
                        <th>Completed posts</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User item in ViewBag.rpt)
                    {
                    <tr>
                        <td>@item.userName</td>
                        <td>@item.Posts.Count(x => x.status == "saved")</td>
                        <td>@item.Posts.Count(x => x.status == "posting")</td>
                        <td>@item.Posts.Count(x => x.status == "bided")</td>
                        <td>@item.Posts.Count(x => x.status == "closing")</td>
                        <td>@item.Posts.Count(x => x.status == "working")</td>
                        <td>@item.Posts.Count(x => x.status == "absent")</td>
                        <td>@item.Posts.Count(x => x.status == "completed")</td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Employer name</th>
                        <th>Saved posts</th>
                        <th>Posting posts</th>
                        <th>Bided posts</th>
                        <th>Closing posts</th>
                        <th>Working posts</th>
                        <th>Absent posts</th>
                        <th>Completed posts</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
@section footer {


}