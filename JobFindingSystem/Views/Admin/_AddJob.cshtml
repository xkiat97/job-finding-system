@model AddJobCategoryVM

<form action="../Admin/AddJob" method="post">
    <div class="form-group">
        @Html.LabelFor(j => j.Name, new { Class = "mb-2" })
        @Html.TextBoxFor(j => j.Name, new { maxlength = 50, required = "", autofocus = "", Class = "form-control", placeholder = "Enter job category title", title = "Title cannot be empty." })
        @Html.ValidationMessageFor(j => j.Name, "", new { Class = "alert-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Description, new { Class = "mb-2" })
        @Html.TextAreaFor(j => j.Description, new { maxlength = 200, required = "", Class = "form-control rounded-0", placeholder = "Enter job title description. Cannot more than 200 character...", title = "Description cannot be empty." })
        @Html.ValidationMessageFor(j => j.Description, "", new { Class = "alert-danger" })
    </div>

    <div style="width: 100%; text-align: right;">
        <button type="reset" class="btn btn-dark">Reset</button>
        <button type="submit" class="btn btn-primary submit mb-4">Add Job Category</button>
    </div>
</form>


